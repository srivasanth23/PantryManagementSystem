@model PantryManagementSystem.Models.Domain.Billing

@{
    ViewData["Title"] = "Bill Generated";
}

<div class="container my-5">
    <div class="card shadow-sm p-4">
        <div class="card-header text-white text-center mb-3"
             style="background: linear-gradient(135deg, #11998e, #38ef7d); border-radius: 12px 12px 0 0;">
            <h3>Bill Generated Successfully</h3>
        </div>

        <div class="card-body text-center">
            <p><strong>User Email:</strong> @Model.UserEmail</p>
            <p><strong>Month:</strong> @Model.Month</p>
            <p><strong>Total Amount:</strong> ₹@Model.TotalAmount</p>
            <p><strong>Generated Date:</strong> @Model.GeneratedDate.ToString("dd-MMM-yyyy")</p>
        </div>

        <div class="d-flex justify-content-center gap-2 mb-3">
            <a asp-action="DownloadPdf" asp-route-id="@Model.Id" class="btn btn-danger">
                <i class="fa-solid fa-file-pdf me-1"></i> Download PDF
            </a>
            <a asp-action="ExportExcel" asp-route-id="@Model.Id" class="btn btn-success">
                <i class="fa-solid fa-file-excel me-1"></i> Download Excel
            </a>
        </div>

        <div class="text-center">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fa-solid fa-arrow-left me-1"></i> Back to All Bills
            </a>
        </div>
    </div>
</div>
