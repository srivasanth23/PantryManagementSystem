@model PantryManagementSystem.Models.Domain.Billing
@{
    ViewData["Title"] = "Bill Details";
}
<h2 class="mb-3">Bill Details</h2>

<div class="card">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">Month</dt>
            <dd class="col-sm-9">@Model.Month</dd>

            <dt class="col-sm-3">User</dt>
            <dd class="col-sm-9"><code>@Model.UserId</code></dd>

            <dt class="col-sm-3">Total Amount</dt>
            <dd class="col-sm-9"><strong>@Model.TotalAmount.ToString("0.00")</strong></dd>

            <dt class="col-sm-3">Generated</dt>
            <dd class="col-sm-9">@Model.GeneratedDate.ToString("dd MMM yyyy, HH:mm")</dd>
        </dl>
    </div>
</div>

<div class="mt-3 d-flex gap-2">
    <a asp-action="Index" class="btn btn-secondary">Back</a>
    <a asp-action="UserBills" asp-route-userId="@Model.UserId" class="btn btn-outline-primary">
        See User Bills
    </a>
    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger">Delete</a>
</div>
