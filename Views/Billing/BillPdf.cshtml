@model PantryManagementSystem.Models.Domain.Billing
@{
    Layout = null;   // PDF should not use _Layout.cshtml
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Bill PDF</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            font-size: 14px;
            margin: 0;
            padding: 0;
        }

        /* HEADER */
        .pdf-header {
            background: linear-gradient(135deg, #ff6a00, #ee0979);
            color: #fff;
            padding: 25px;
            text-align: center;
        }

            .pdf-header h2 {
                margin: 0;
                font-weight: 700;
                font-size: 20px;
            }

            .pdf-header p {
                margin: 5px 0 0;
                font-size: 13px;
            }

        /* MAIN CONTENT */
        .pdf-body {
            min-height: calc(100vh - 140px); /* adjust to leave room for header+footer */
            display: flex;
            flex-direction: column;
            justify-content: flex-start;
            padding: 25px;
        }

        .bill-card {
            flex: 1;
            border-radius: 12px;
            box-shadow: 0px 3px 8px rgba(0, 0, 0, 0.15);
            background: #fff;
            padding: 20px;
        }

        .section-title {
            font-size: 16px;
            font-weight: 600;
            margin-top: 20px;
            margin-bottom: 12px;
            color: #ff6a00;
        }

        /* TABLE */
        .table th {
            background-color: #343a40 !important;
            color: #fff !important;
        }

        .table td, .table th {
            vertical-align: middle;
            text-align: center;
            padding: 10px;
        }

        /* FOOTER */
        .pdf-footer {
            background: #f8f9fa;
            text-align: center;
            font-size: 12px;
            padding: 10px;
            border-top: 2px solid #ff6a00;
        }
    </style>
</head>
<body>
    <!-- HEADER -->
    <div class="pdf-header">
        <h2>DotWings Pantry Pvt. Ltd.</h2>
        <p>123 Corporate Avenue, Tech City, India | support@dotwings.com | +91-9876543210</p>
    </div>

    <!-- MAIN BODY -->
    <div class="pdf-body">
        <div class="bill-card">
            <dl class="row">
                <dt class="col-sm-3">Month</dt>
                <dd class="col-sm-9">@Model.Month</dd>

                <dt class="col-sm-3">User</dt>
                <dd class="col-sm-9">@Model.UserEmail</dd>

                <dt class="col-sm-3">Total Amount</dt>
                <dd class="col-sm-9"><strong>₹@Model.TotalAmount</strong></dd>

                <dt class="col-sm-3">Generated</dt>
                <dd class="col-sm-9">@Model.GeneratedDate.ToString("dd MMM yyyy, HH:mm")</dd>
            </dl>

            @if (Model.Orders != null && Model.Orders.Any())
            {
                <h5 class="section-title">Orders in this Bill</h5>
                <table class="table table-bordered table-striped w-100">
                    <thead>
                        <tr>
                            <th>Item</th>
                            <th>Quantity</th>
                            <th>Price (₹)</th>
                            <th>Total (₹)</th>
                            <th>Issued Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model.Orders)
                        {
                            <tr>
                                <td>@order.PantryItem?.Name</td>
                                <td>@order.Quantity</td>
                                <td>@order.PantryItem?.Price</td>
                                <td>@(order.PantryItem?.Price * order.Quantity)</td>
                                <td>@order.IssuedDate?.ToString("dd MMM yyyy")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-warning mt-3">
                    No issued orders found for this billing period.
                </div>
            }
        </div>
    </div>

    <!-- FOOTER -->
    <div class="pdf-footer">
        Generated by Pantry Management System | @DateTime.Now.ToString("dd MMM yyyy, HH:mm")
    </div>
</body>
</html>
