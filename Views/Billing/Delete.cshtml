@model PantryManagementSystem.Models.Domain.Billing
@{
    ViewData["Title"] = "Delete Bill";
}
<h2 class="mb-3">Delete Bill</h2>

<div class="alert alert-danger">
    Are you sure you want to delete the bill for <strong>@Model.Month</strong> (User <code>@Model.UserId</code>)?
</div>

<form asp-action="Delete" method="post" class="card p-3">
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" value="@Model.Id" />
    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
